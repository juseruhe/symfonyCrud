<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"/>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
        
       
        <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
        <h2 class="h2"> Tabla de Usuarios </h2> 
         <a href="{{path('create')}}" class="btn btn-success"> Crear Usuario</a>
        <table class="table table-info my-4">
        <thead>
        <tr>
        <th> #</th>
        <th> Nombre</th>
        <th>Apellido</th>
        <th>Correo </th>
        <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
       <td>{{loop.index}} </td>
       <td>{{user.firstname}}</td>
       <td>{{user.lastname}}</td>
       <td> {{user.email}} </td>
       <td>
       <a href="{{path('show',{'id': user.id})}}" class="btn btn-info">Mostrar</a>
       <a href="{{path('edit',{'id': user.id})}}" class="btn btn-warning">Editar</a>
       <a href="{{path('delete',{'id': user.id})}}" class="btn btn-danger">Eliminar</a>
       </td>
       </tr>
       </div>
       {% endfor %}

       <div class="col-lg-3"></div>
       </div>
         
        </tbody>

        </table>  
        
        {% endblock %}
    </body>
</html>
