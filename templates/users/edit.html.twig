<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"/>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}


        <div class="row">
        <div class="col-lg-3"> </div>
        <div class="col-lg-6">
        <h2 class="h2">Actualizar Usuario</h2>
       <form method="post" action="{{path('update',{'id': user.id})}}">

       <input type="hidden" value="{{user.id}}">

       <div class="form-group">
      <label for="firstname" class="label"> Nombre: </label>
      <input type="text" required class="form-control" id="firstname" value="{{user.firstname}}" name="firstname">
       </div>

          <div class="form-group">
      <label for="lastname" class="label"> Apellido: </label>
      <input type="text" required class="form-control" id="lastname" value="{{user.lastname}}" name="lastname">
       </div>

          <div class="form-group">
      <label for="email" class="label"> Correo: </label>
      <input type="email" required class="form-control" value="{{user.email}}" id="email" name="email">
       </div>

       <button type="submit" class="btn btn-warning btn-block my-4"> Actualizar</button>
       <a class="btn btn-link mx-4" href="{{path('index')}}"> Volver</a>

       </form>
       </div>
       <div class="col-lg-3"> </div>
        </div>
        {% endblock %}
    </body>
</html>
